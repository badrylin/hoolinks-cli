{
    "compilerOptions": {
        "module": "ES2015",
        "target": "es5",
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        "types": ["node"],
        "jsx": "react",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}

